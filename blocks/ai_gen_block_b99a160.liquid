{% doc %}
  @prompt
    multi column with selectable blog posts and images, allow to remove author and date, Allow up to 10 articles, allow titles to be hyperlinked, , allow heading to be hyperlinked, allow a photo to be chosen for each article, place a button on each article card, allow the blog photo size to be adjustable
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-grid-{{ ai_gen_id }} {
    padding: 40px 20px;
  }

  .ai-blog-grid-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
  }

  .ai-blog-grid-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 40px;
  }

  .ai-blog-grid-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
  }

  .ai-blog-grid-heading-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-blog-grid-heading-{{ ai_gen_id }} a:hover {
    opacity: 0.8;
  }

  .ai-blog-grid-items-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ settings.spacing_grid_horizontal }}px {{ settings.spacing_grid_vertical }}px;
  }

  .ai-blog-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ settings.card_corner_radius }}px;
    border: {{ settings.card_border_thickness }}px solid rgba({{ block.settings.card_border_color.red }}, {{ block.settings.card_border_color.green }}, {{ block.settings.card_border_color.blue }}, {{ settings.card_border_opacity | divided_by: 100.0 }});
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: 0 {{ settings.card_shadow_vertical_offset }}px {{ settings.card_shadow_blur }}px rgba(0, 0, 0, {{ settings.card_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-blog-card-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-blog-card-image-wrapper-{{ ai_gen_id }}::before {
    content: '';
    display: block;
    padding-top: {{ block.settings.image_ratio }}%;
  }

  .ai-blog-card-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-card-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-blog-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-blog-card-content-{{ ai_gen_id }} {
    padding: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-blog-card-meta-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    font-size: 14px;
    color: {{ block.settings.meta_color }};
    margin-bottom: 12px;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .ai-blog-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-weight: {{ settings.type_header_font.weight }};
  }

  .ai-blog-card-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-blog-card-title-{{ ai_gen_id }} a:hover {
    opacity: 0.8;
  }

  .ai-blog-card-excerpt-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    margin-bottom: 20px;
    flex-grow: 1;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .ai-blog-card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ settings.buttons_radius }}px;
    text-align: center;
    font-size: 14px;
    border: {{ settings.buttons_border_thickness }}px solid rgba({{ block.settings.button_background.red }}, {{ block.settings.button_background.green }}, {{ block.settings.button_background.blue }}, {{ settings.buttons_border_opacity | divided_by: 100.0 }});
    box-shadow: {{ settings.buttons_shadow_horizontal_offset }}px {{ settings.buttons_shadow_vertical_offset }}px {{ settings.buttons_shadow_blur }}px rgba(0, 0, 0, {{ settings.buttons_shadow_opacity | divided_by: 100.0 }});
    transition: all 0.3s ease;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .ai-blog-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 989px) {
    .ai-blog-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-blog-grid-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-blog-grid-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-blog-card-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-blog-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-grid-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-blog-grid-header-{{ ai_gen_id }}">
        <h2 class="ai-blog-grid-heading-{{ ai_gen_id }}">
          {% if block.settings.heading_link != blank %}
            <a href="{{ block.settings.heading_link }}">{{ block.settings.heading }}</a>
          {% else %}
            {{ block.settings.heading }}
          {% endif %}
        </h2>
      </div>
    {% endif %}

    <div class="ai-blog-grid-items-{{ ai_gen_id }}">
      {% for i in (1..10) %}
        {% liquid
          assign article_key = 'article_' | append: i
          assign image_key = 'article_' | append: i | append: '_image'
          assign article = block.settings[article_key]
          assign custom_image = block.settings[image_key]
        %}

        {% if article != blank %}
          <div class="ai-blog-card-{{ ai_gen_id }}">
            <div class="ai-blog-card-image-wrapper-{{ ai_gen_id }}">
              {% if custom_image != blank %}
                <img
                  src="{{ custom_image | image_url: width: 800 }}"
                  alt="{{ custom_image.alt | escape }}"
                  loading="lazy"
                  class="ai-blog-card-image-{{ ai_gen_id }}"
                  width="{{ custom_image.width }}"
                  height="{{ custom_image.height }}"
                >
              {% elsif article.image %}
                <img
                  src="{{ article.image | image_url: width: 800 }}"
                  alt="{{ article.image.alt | escape }}"
                  loading="lazy"
                  class="ai-blog-card-image-{{ ai_gen_id }}"
                  width="{{ article.image.width }}"
                  height="{{ article.image.height }}"
                >
              {% else %}
                <div class="ai-blog-card-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-blog-card-content-{{ ai_gen_id }}">
              {% if block.settings.show_author or block.settings.show_date %}
                <div class="ai-blog-card-meta-{{ ai_gen_id }}">
                  {% if block.settings.show_author %}
                    <span>{{ article.author }}</span>
                  {% endif %}
                  {% if block.settings.show_date %}
                    <span>{{ article.published_at | date: '%B %d, %Y' }}</span>
                  {% endif %}
                </div>
              {% endif %}

              <h3 class="ai-blog-card-title-{{ ai_gen_id }}">
                {% if block.settings.enable_title_link %}
                  <a href="{{ article.url }}">{{ article.title }}</a>
                {% else %}
                  {{ article.title }}
                {% endif %}
              </h3>

              {% if block.settings.show_excerpt and article.excerpt != blank %}
                <div class="ai-blog-card-excerpt-{{ ai_gen_id }}">
                  {{ article.excerpt | strip_html | truncate: 120 }}
                </div>
              {% endif %}

              {% if block.settings.button_text != blank %}
                <a href="{{ article.url }}" class="ai-blog-card-button-{{ ai_gen_id }}">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

