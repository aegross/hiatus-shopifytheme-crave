{% doc %}
  @prompt
    multi column with selectable blog posts and images, allow to remove author and date, Allow up to 10 articles
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-columns-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-blog-columns__container-{{ ai_gen_id }} {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-blog-columns__heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 40px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-blog-columns__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.column_gap }}px;
  }

  .ai-blog-columns__item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    border: {{ block.settings.card_border_thickness }}px solid {{ block.settings.card_border_color }};
    box-shadow: 0 {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-blog-columns__item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 {{ block.settings.card_shadow_vertical | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 5 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-blog-columns__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_ratio }}%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-blog-columns__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-columns__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-blog-columns__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-columns__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .ai-blog-columns__meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 8px;
    flex-wrap: wrap;
  }

  .ai-blog-columns__date-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.date_color }};
  }

  .ai-blog-columns__author-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.author_color }};
  }

  .ai-blog-columns__meta-separator-{{ ai_gen_id }} {
    width: 4px;
    height: 4px;
    background-color: {{ block.settings.date_color }};
    border-radius: 50%;
  }

  .ai-blog-columns__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .ai-blog-columns__title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
  }

  .ai-blog-columns__title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-blog-columns__excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    color: {{ block.settings.excerpt_color }};
    margin-bottom: 16px;
    line-height: 1.6;
    flex-grow: 1;
  }

  .ai-blog-columns__link-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    text-align: center;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-blog-columns__link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-blog-columns__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .ai-blog-columns__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-blog-columns__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-blog-columns__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
      margin-bottom: 24px;
    }
  }
{% endstyle %}

<div class="ai-blog-columns-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-columns__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-blog-columns__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% liquid
      assign articles_array = ''
      assign has_articles = false

      for i in (1..10)
        assign article_key = 'article_' | append: i
        assign current_article = block.settings[article_key]
        if current_article != blank
          assign has_articles = true
        endif
      endfor
    %}

    {% if has_articles %}
      <div class="ai-blog-columns__grid-{{ ai_gen_id }}">
        {% for i in (1..10) %}
          {% liquid
            assign article_key = 'article_' | append: i
            assign image_key = 'image_' | append: i
            assign current_article = block.settings[article_key]
            assign current_image = block.settings[image_key]
          %}

          {% if current_article != blank %}
            <div class="ai-blog-columns__item-{{ ai_gen_id }}">
              <div class="ai-blog-columns__image-wrapper-{{ ai_gen_id }}">
                {% if current_image != blank %}
                  <img
                    src="{{ current_image | image_url: width: 800 }}"
                    alt="{{ current_image.alt | escape }}"
                    class="ai-blog-columns__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="{{ current_image.width }}"
                    height="{{ current_image.height }}"
                  >
                {% elsif current_article.image %}
                  <img
                    src="{{ current_article.image | image_url: width: 800 }}"
                    alt="{{ current_article.image.alt | escape }}"
                    class="ai-blog-columns__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="{{ current_article.image.width }}"
                    height="{{ current_article.image.height }}"
                  >
                {% else %}
                  <div class="ai-blog-columns__image-placeholder-{{ ai_gen_id }}">
                    {{ 'blog-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="ai-blog-columns__content-{{ ai_gen_id }}">
                {% if block.settings.show_date or block.settings.show_author %}
                  <div class="ai-blog-columns__meta-{{ ai_gen_id }}">
                    {% if block.settings.show_date %}
                      <div class="ai-blog-columns__date-{{ ai_gen_id }}">
                        {{ current_article.published_at | date: '%B %d, %Y' }}
                      </div>
                    {% endif %}
                    {% if block.settings.show_date and block.settings.show_author %}
                      <span class="ai-blog-columns__meta-separator-{{ ai_gen_id }}"></span>
                    {% endif %}
                    {% if block.settings.show_author %}
                      <div class="ai-blog-columns__author-{{ ai_gen_id }}">
                        By {{ current_article.author }}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
                <h3 class="ai-blog-columns__title-{{ ai_gen_id }}">
                  <a href="{{ current_article.url }}" class="ai-blog-columns__title-link-{{ ai_gen_id }}">
                    {{ current_article.title }}
                  </a>
                </h3>
                {% if block.settings.show_excerpt and current_article.excerpt != blank %}
                  <div class="ai-blog-columns__excerpt-{{ ai_gen_id }}">
                    {{ current_article.excerpt | strip_html | truncate: block.settings.excerpt_length }}
                  </div>
                {% endif %}
                {% if block.settings.show_button %}
                  <a href="{{ current_article.url }}" class="ai-blog-columns__link-{{ ai_gen_id }}">
                    {{ block.settings.button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-blog-columns__empty-state-{{ ai_gen_id }}">
        Next, select blog posts to display
      </div>
    {% endif %}
  </div>
</div>

