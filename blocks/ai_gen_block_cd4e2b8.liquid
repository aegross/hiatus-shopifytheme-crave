{% doc %}
  @prompt
    multi column with selectable blog posts and images, allow to remove author and date, Allow up to 10 articles, allow titles to be hyperlinked, , allow heading to be hyperlinked, allow a photo to be chosen for each article, place a button on each article card
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-posts-{{ ai_gen_id }} {
    padding: 40px 20px;
  }

  .ai-blog-posts__heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 40px;
    font-size: 32px;
    color: {{ block.settings.heading_color }};
  }

  .ai-blog-posts__heading-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-blog-posts__heading-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.heading_hover_color }};
  }

  .ai-blog-posts__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: {{ block.settings.column_gap }}px;
    max-width: 1600px;
    margin: 0 auto;
  }

  .ai-blog-posts__article-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    border: {{ block.settings.card_border_thickness }}px solid {{ block.settings.card_border_color }};
    box-shadow: 0 {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-blog-posts__article-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 {{ block.settings.card_shadow_vertical | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 5 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-blog-posts__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 66.67%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-blog-posts__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-posts__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-blog-posts__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-blog-posts__content-{{ ai_gen_id }} {
    padding: 24px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .ai-blog-posts__title-{{ ai_gen_id }} {
    margin: 0 0 12px;
    font-size: {{ block.settings.title_font_size }}px;
    line-height: 1.3;
    color: {{ block.settings.title_color }};
  }

  .ai-blog-posts__title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-blog-posts__title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.title_hover_color }};
  }

  .ai-blog-posts__meta-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    margin-bottom: 12px;
    font-size: {{ block.settings.meta_font_size }}px;
    color: {{ block.settings.meta_color }};
  }

  .ai-blog-posts__meta-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-blog-posts__excerpt-{{ ai_gen_id }} {
    margin: 0 0 16px;
    font-size: {{ block.settings.excerpt_font_size }}px;
    line-height: 1.6;
    color: {{ block.settings.excerpt_color }};
    flex-grow: 1;
  }

  .ai-blog-posts__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-align: center;
    transition: background-color 0.3s ease, transform 0.2s ease;
    font-size: 14px;
    font-weight: 600;
    border: {{ block.settings.button_border_thickness }}px solid {{ block.settings.button_border_color }};
  }

  .ai-blog-posts__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    transform: translateY(-2px);
  }

  .ai-blog-posts__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #999;
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-blog-posts__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-blog-posts__heading-{{ ai_gen_id }} {
      font-size: 24px;
      margin-bottom: 24px;
    }
  }
{% endstyle %}

<div class="ai-blog-posts-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="ai-blog-posts__heading-{{ ai_gen_id }}">
      {% if block.settings.enable_heading_link and block.settings.heading_link != blank %}
        <a href="{{ block.settings.heading_link }}" class="ai-blog-posts__heading-link-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </a>
      {% else %}
        {{ block.settings.heading }}
      {% endif %}
    </h2>
  {% endif %}

  {% assign has_articles = false %}
  {% for i in (1..10) %}
    {% assign article_key = 'article_' | append: i %}
    {% if block.settings[article_key] != blank %}
      {% assign has_articles = true %}
      {% break %}
    {% endif %}
  {% endfor %}

  {% if has_articles %}
    <div class="ai-blog-posts__grid-{{ ai_gen_id }}">
      {% for i in (1..10) %}
        {% assign article_key = 'article_' | append: i %}
        {% assign custom_image_key = 'article_' | append: i | append: '_image' %}
        {% assign article = block.settings[article_key] %}
        {% assign custom_image = block.settings[custom_image_key] %}

        {% if article != blank %}
          <article class="ai-blog-posts__article-{{ ai_gen_id }}">
            <div class="ai-blog-posts__image-wrapper-{{ ai_gen_id }}">
              {% if custom_image %}
                <img
                  src="{{ custom_image | image_url: width: 600 }}"
                  alt="{{ custom_image.alt | escape }}"
                  loading="lazy"
                  width="600"
                  height="400"
                  class="ai-blog-posts__image-{{ ai_gen_id }}"
                >
              {% elsif article.image %}
                <img
                  src="{{ article.image | image_url: width: 600 }}"
                  alt="{{ article.image.alt | escape }}"
                  loading="lazy"
                  width="600"
                  height="400"
                  class="ai-blog-posts__image-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="ai-blog-posts__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-blog-posts__content-{{ ai_gen_id }}">
              <h3 class="ai-blog-posts__title-{{ ai_gen_id }}">
                {% if block.settings.enable_title_links %}
                  <a href="{{ article.url }}" class="ai-blog-posts__title-link-{{ ai_gen_id }}">
                    {{ article.title }}
                  </a>
                {% else %}
                  {{ article.title }}
                {% endif %}
              </h3>

              {% if block.settings.show_author or block.settings.show_date %}
                <div class="ai-blog-posts__meta-{{ ai_gen_id }}">
                  {% if block.settings.show_author %}
                    <div class="ai-blog-posts__meta-item-{{ ai_gen_id }}">
                      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M8 8C9.65685 8 11 6.65685 11 5C11 3.34315 9.65685 2 8 2C6.34315 2 5 3.34315 5 5C5 6.65685 6.34315 8 8 8Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M14 14C14 11.7909 11.3137 10 8 10C4.68629 10 2 11.7909 2 14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                      <span>{{ article.author }}</span>
                    </div>
                  {% endif %}

                  {% if block.settings.show_date %}
                    <div class="ai-blog-posts__meta-item-{{ ai_gen_id }}">
                      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12.6667 2.66667H3.33333C2.59695 2.66667 2 3.26362 2 4V13.3333C2 14.0697 2.59695 14.6667 3.33333 14.6667H12.6667C13.403 14.6667 14 14.0697 14 13.3333V4C14 3.26362 13.403 2.66667 12.6667 2.66667Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M10.6667 1.33333V4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M5.33333 1.33333V4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M2 6.66667H14" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                      <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                        {{ article.published_at | date: '%B %d, %Y' }}
                      </time>
                    </div>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.show_excerpt and article.excerpt != blank %}
                <div class="ai-blog-posts__excerpt-{{ ai_gen_id }}">
                  {{ article.excerpt | strip_html | truncate: block.settings.excerpt_length }}
                </div>
              {% endif %}

              {% if block.settings.show_button %}
                <a href="{{ article.url }}" class="ai-blog-posts__button-{{ ai_gen_id }}">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            </div>
          </article>
        {% endif %}
      {% endfor %}
    </div>
  {% else %}
    <div class="ai-blog-posts__empty-state-{{ ai_gen_id }}">
      Next, select articles to display
    </div>
  {% endif %}
</div>

