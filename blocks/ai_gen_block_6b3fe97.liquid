{% doc %}
  @prompt
    i want a header with an image and a title overlay
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-overlay-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.header_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .ai-header-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-header-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-header-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-header-overlay-layer-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-header-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    padding: 40px 20px;
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
  }

  .ai-header-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0;
    font-weight: 600;
    line-height: 1.2;
    text-shadow: {{ block.settings.text_shadow_horizontal }}px {{ block.settings.text_shadow_vertical }}px {{ block.settings.text_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.text_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-header-subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.subtitle_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 16px 0 0;
    line-height: 1.5;
    text-shadow: {{ block.settings.text_shadow_horizontal }}px {{ block.settings.text_shadow_vertical }}px {{ block.settings.text_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.text_shadow_opacity | divided_by: 100.0 }});
  }

  @media screen and (max-width: 749px) {
    .ai-header-overlay-{{ ai_gen_id }} {
      min-height: {{ block.settings.header_height | times: 0.7 }}px;
    }

    .ai-header-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.7 }}px;
    }

    .ai-header-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-header-overlay-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.header_image %}
    <img
      src="{{ block.settings.header_image | image_url: width: 2000 }}"
      alt="{{ block.settings.header_image.alt | escape }}"
      loading="lazy"
      width="{{ block.settings.header_image.width }}"
      height="{{ block.settings.header_image.height }}"
      class="ai-header-image-{{ ai_gen_id }}"
    >
  {% else %}
    <div class="ai-header-image-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
    </div>
  {% endif %}

  <div class="ai-header-overlay-layer-{{ ai_gen_id }}"></div>

  <div class="ai-header-content-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h1 class="ai-header-title-{{ ai_gen_id }}">{{ block.settings.title }}</h1>
    {% endif %}

    {% if block.settings.subtitle != blank %}
      <div class="ai-header-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Header with overlay",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "header_image",
      "label": "Header image"
    },
    {
      "type": "range",
      "id": "header_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Header height",
      "default": 500
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 40
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Welcome to our store"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Discover our amazing collection"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 400,
      "max": 1200,
      "step": 100,
      "unit": "px",
      "label": "Content max width",
      "default": 800
    },
    {
      "type": "header",
      "content": "Title style"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 24,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Title size",
      "default": 56
    },
    {
      "type": "header",
      "content": "Subtitle style"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "min": 12,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Subtitle size",
      "default": 18
    },
    {
      "type": "header",
      "content": "Text shadow"
    },
    {
      "type": "range",
      "id": "text_shadow_horizontal",
      "min": -10,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Horizontal offset",
      "default": 0
    },
    {
      "type": "range",
      "id": "text_shadow_vertical",
      "min": -10,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Vertical offset",
      "default": 2
    },
    {
      "type": "range",
      "id": "text_shadow_blur",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Blur",
      "default": 4
    },
    {
      "type": "range",
      "id": "text_shadow_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Shadow opacity",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Header with overlay"
    }
  ]
}
{% endschema %}
